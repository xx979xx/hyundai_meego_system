version() {
  echo "espdiff - patchutils version 0.3.1"
}

usage() {
  echo "usage: espdiff [OPTION...] [FILE...]"
}

deep_brainwave=0
recurse=0
compare=0
while [ "$#" -gt 0 ]
do
  case "$1" in
  --help)
	usage
	exit 0
	;;
  --version)
	version
	exit 0
	;;
  --deep-brainwave-mode)
	deep_brainwave=1
	shift
	;;
  --recurse)
	recurse=1
	shift
	;;
  --compare)
	compare=1
	shift
	;;
  --)
	shift
	break
	;;

  *)
	break
	;;
  esac
done

for each in "$@"
do
  error=$(cat "$each" 2>&1 >/dev/null)
  if [ $? -ne 0 ]
  then
    echo >&2 "espdiff${error#cat}"
    exit 1
  fi
done

delay=3
if [ "$deep_brainwave" -ne 0 ]
then
  delay=$(($delay * 2))
fi

read -t $delay -p 'Please concentrate... ' || echo
echo 'No brainwave activity detected.  Aborting.'
exit 1
